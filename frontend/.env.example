# Google Maps JavaScript API (client-side)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
# Google Places API Web Service (server-side)
GOOGLE_PLACES_API_KEY=your_google_places_api_key
# Official Gemini 2.5 Flash Image (recommended) – used by /api/generate-portrait
# Get key from Google AI Studio: https://aistudio.google.com/apikey
GOOGLE_CLOUD_API_KEY=your_google_cloud_or_gemini_api_key

# Fallback: Nano Banana (nanobananapro.cloud) – used if GOOGLE_CLOUD_API_KEY is not set
NANO_BANANA_API_KEY=your_nano_banana_api_key

# Firebase (server-side)
# Path to service account JSON, or use FIREBASE_SERVICE_ACCOUNT for base64-encoded JSON
GOOGLE_APPLICATION_CREDENTIALS=./firebase-service-account.json
# Firebase Storage bucket (e.g. your-project.firebasestorage.app or your-project.appspot.com)
# Enable Storage in Firebase Console: Project → Storage → Get started
FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app

# Firebase (client-side, for Auth)
# From Firebase Console → Project Settings → General → Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
